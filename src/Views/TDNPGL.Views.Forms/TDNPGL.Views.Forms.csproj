<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
   <LangVersion>8.0</LangVersion>
    <PackageLicenseFile>..\..\LICENSE.txt</PackageLicenseFile>
    <PackageIcon>..\..\..\2DNPGL_HD.png</PackageIcon>
    <Version>1.1.0</Version>
    <RepositoryUrl>github.com/zatrit/TDNPGL</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="GameRendererView.xaml" />
    <None Include="..\..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\..\2DNPGL_HD.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp.Views" Version="2.80.0" />
    <PackageReference Include="SkiaSharp.Views.Forms" Version="2.80.0" />
    <PackageReference Include="System.Runtime" Version="4.2.2.0" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\TDNPGL.Core\TDNPGL.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="GameRendererView.xaml.cs">
      <SubType>Code</SubType>
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
